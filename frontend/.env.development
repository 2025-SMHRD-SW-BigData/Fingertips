VITE_API_TARGET=http://localhost:3000
VITE_API_BASE=/api
VITE_LOGIN_PATH=/login
# '/api' 프리픽스를 백엔드로 전달하지 않게 하려면 1로 설정
# (예: 백엔드 라우트가 '/auth/login' 인 경우)
VITE_PROXY_STRIP_API=0
# 쿠키 세션 사용 시 1로 설정 (fetch에 credentials: include)
VITE_USE_CREDENTIALS=0

# Argon2 client pre-hash parameters (match backend)
VITE_ARGON2_ITER=3
VITE_ARGON2_MEM_KB=65536
VITE_ARGON2_HASH_LEN=32
# Salt source: 'username' or 'static'
VITE_PWD_SALT_SOURCE=username
VITE_PWD_SALT_STATIC=
